#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import Window kivy.core.window.Window

ScreenManagement:
    ## transition: FadeTransition()

    MenuScreen:
    PracticeScreen_wdik_soprano:
    PracticeScreen_wdik_alto:
    PracticeScreen_wdik_tenor:
    PracticeScreen_wdik_bass:
    PerformScreen_wdik_soprano:
    PerformScreen_wdik_alto:
    PerformScreen_wdik_tenor:
    PerformScreen_wdik_bass:
    SettingsScreen:


<MenuScreen>:
    name: "menu"
        
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [.4*Window.width,.05*Window.height,.05*Window.width,.15*Window.height]
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "spotlight.png"

        Label:
            text: "[color=FFFFFF][b]ACAHERO[/b]"
            font_size: '75sp'
            halign: 'center'
            valign: 'bottom'
            markup: True

        Button:
            background_color: (.9,.9,.9,.5) if self.state == 'normal' else (1,0,0,.5)
            font_size: '30sp'
            text: 'Practice Mode'
            on_press: 
                root.manager.transition.direction = 'left'
                root.goPractice()

        Button:
            background_color: (.7,.7,.7,.5) if self.state == 'normal' else (1,0,0,.5)
            font_size: '30sp'
            text: 'Perform Mode'
            on_press: 
                root.manager.transition.direction = 'left'
                root.goPerform()
        Button:
            background_color: (.5,.5,.5,.5) if self.state == 'normal' else (1,0,0,.5)
            font_size: '30sp'
            text: 'Settings'
            on_press: 
                root.manager.transition.direction = 'up'
                root.manager.current = 'settings'

<SettingsScreen>:
    name: "settings"

    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [.4*Window.width,.05*Window.height,.05*Window.width,.15*Window.height]
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "spotlight.png"

        Label:
            text: "[color=FFFFFF][b]ACAHERO[/b]"
            font_size: '75sp'
            halign: 'center'
            valign: 'bottom'
            markup: True

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            padding: [0,0,0,.15*Window.height]

            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '28sp'
                text: 'Soprano'
                group: 'Part'
                on_press:
                    root.setPart('soprano')
            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '28sp'
                text: 'Alto'
                group: 'Part'
                on_press:
                    root.setPart('alto')
            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '28sp'
                text: 'Tenor'
                group: 'Part'
                on_press:
                    root.setPart('tenor')
            ToggleButton:
                background_color: (.95,.95,.95,.5)
                font_size: '28sp'
                text: 'Bass'
                group: 'Part'
                on_press:
                    root.setPart('bass')
            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '28sp'
                text: 'Solo'
                group: 'Part'
                on_press:
                    root.setPart('voice')

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: [0,0,0,.1*Window.height]

            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '30sp'
                text: 'What Do I Know - Ed Sheeran'
                group: 'Song'
                on_press:
                    root.setSong('wdik')
            ToggleButton:
                background_color: (.95,.95,.95,.5) 
                font_size: '30sp'
                text: 'Jingle Bell Rock - Mean Girls'
                group: 'Song'
                on_press:
                    root.setSong('jbr')
                
                
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [.05*Window.width,.85*Window.height,.35*Window.width,.05*Window.height]

        Button:
            background_color: (.95,.95,.95,.5) if self.state == 'normal' else (1,0,0,.5)
            text: '< Back'
            font_size: '25sp'
            size_hint: (.2,.05)
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'


<PracticeScreen_wdik_soprano>:
    name: "practice_wdik_soprano"

    FloatLayout:
        Button:
            background_color: (0,0,0,0) if self.state == 'normal' else (0,1,0,.5)
            font_size: '45sp'
            text: '[color=000000][b]< ACAHERO[/b]'
            markup: True
            size_hint: (.2, .1)
            pos: (.03*Window.width,.85*Window.height)
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

        Button:
            background_color: (0,0,0,0) if self.state == 'normal' else (0,1,0,.5)
            font_size: '45sp'
            text: '[color=000000][b]START | PAUSE[/b]' 
            markup: True
            size_hint: (.25, .1)
            pos: (.38*Window.width,.85*Window.height)
            on_press: 
                root.startWidget()

